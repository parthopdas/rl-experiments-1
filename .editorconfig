# stop .editorconfig files search on current file.
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4

; Python: PEP8 defines 4 spaces for indentation
[*.py]
indent_style = space
indent_size = 4

[*.{js,ts,json,jsx,tsx,htm,html,yml,xml,*rc}]
indent_size = 2
tab_width = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
